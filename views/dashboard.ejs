<%- include('partials/_head', { title: 'Dashboard' }) %>

<link rel="stylesheet" href="/stylesheets/dashboard.css">
<body class="hold-transition sidebar-mini">
<div class="wrapper">

  <%- include('partials/_navbar') %>
  <%- include('partials/_sidebar', { active: 'dashboard' }) %>

  <div class="content-wrapper">
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="mb-1">Dashboard</h1>
            <p class="text-muted mb-0">Overview of your prospects and activities.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="content">
      <div class="container-fluid">

        <!-- Top summary cards -->
        <div class="row mb-3">
          <div class="col-md-4 mb-2">
            <div class="card shadow-sm border-0 dashboard-card dashboard-card--teal">
              <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                  <div class="card-label">Total Prospects</div>
                  <div class="card-value" id="totalLeads">0</div>
                </div>
                <div class="card-icon">
                  <i class="fas fa-users"></i>
                </div>
              </div>
            </div>
          </div>

          <div class="col-md-4 mb-2">
            <div class="card shadow-sm border-0 dashboard-card dashboard-card--green">
              <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                  <div class="card-label">New Today</div>
                  <div class="card-value" id="newToday">0</div>
                </div>
                <div class="card-icon">
                  <i class="fas fa-user-plus"></i>
                </div>
              </div>
            </div>
          </div>

          <div class="col-md-4 mb-2">
            <div class="card shadow-sm border-0 dashboard-card dashboard-card--amber">
              <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                  <div class="card-label">New (Last 7 days)</div>
                  <div class="card-value" id="last7Days">0</div>
                </div>
                <div class="card-icon">
                  <i class="fas fa-calendar-week"></i>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Stage funnel + Last 14 days -->
        <div class="row mb-3">
          <div class="col-lg-7 mb-3">
            <div class="card shadow-sm border-0">
              <div class="card-header">
                <h3 class="card-title mb-0">Prospects by Stage</h3>
              </div>
              <div class="card-body">
                <div id="stageFunnel" class="funnel-card">
                  <div class="pipeline">
                    <div class="pipeline-inner">
                      <div class="pipeline-line"></div>
                      <div id="stageFunnelInner" class="funnel-bar"></div>
                    </div>
                  </div>
                  <div class="text-muted small mt-1">
                    Click on a stage to filter the leads list (coming soon).
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-lg-5 mb-3">
            <div class="card shadow-sm border-0">
              <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="card-title mb-0">Last 14 days</h3>
                <span class="text-muted small">New prospects per day</span>
              </div>
              <div class="card-body">
                <canvas id="chartLast14" height="160"></canvas>
              </div>
            </div>
          </div>
        </div>

        <!-- Recent leads table -->
        <div class="row">
          <div class="col-12">
            <div class="card shadow-sm border-0">
              <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="card-title mb-0">Recent Prospects</h3>
                <a href="/leads" class="btn btn-sm btn-outline-primary">
                  View All
                </a>
              </div>
              <div class="card-body p-0">
                <div class="table-responsive">
                  <table class="table mb-0">
                    <thead class="thead-light">
                      <tr>
                        <th>Prospect</th>
                        <th>Mobile</th>
                        <th>Priority</th>
                        <th>Created</th>
                      </tr>
                    </thead>
                    <tbody id="recentLeadsBody">
                      <tr>
                        <td colspan="4" class="text-center text-muted py-3">
                          Loading...
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </section>
  </div>
  <%- include('partials/_footer') %>

</div>

<!-- বেস JS (সব পেজের জন্য দরকার) -->
<script src="/vendor/jquery/dist/jquery.min.js"></script>
<script src="/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="/vendor/admin-lte/dist/js/adminlte.min.js"></script>

<!-- Dashboard specific JS -->
<script src="/vendor/chart.js/chart.umd.min.js"></script>
<script src="/javascripts/dashboard.js"></script>

</body>
</html>


