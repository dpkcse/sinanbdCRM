<%- include('../partials/_head', { title: 'Employees' }) %>
<body class="hold-transition sidebar-mini">
<div class="wrapper">
  <%- include('../partials/_navbar') %>
  <%- include('../partials/_sidebar', { active: 'hr_employees' }) %>

  <div class="content-wrapper">
    <section class="content pt-3">
      <div class="container-fluid">

        <div class="d-flex justify-content-between align-items-center mb-3">
          <h1 class="h4 mb-0">Employees</h1>
          <button class="btn btn-primary" id="btnAddEmployee">
            <i class="fas fa-plus mr-1"></i> Add Employee
          </button>
        </div>

        <div class="card">
          <div class="card-body">

            <div class="form-group">
              <input
                type="text"
                class="form-control"
                id="empSearch"
                placeholder="Search employees..."
              >
            </div>

            <div class="table-responsive">
              <table class="table table-hover table-sm">
                <thead>
                  <tr>
                    <th style="width: 120px;">Code</th>
                    <th>Name &amp; Contact</th>
                    <th style="width: 220px;">Designation</th>
                    <th style="width: 120px;">Status</th>
                    <th style="width: 160px;">Login</th>
                    <th style="width: 80px;">Action</th>
                  </tr>
                </thead>
                <tbody id="empTableBody">
                <!-- JS দিয়ে লোড হবে -->
                </tbody>
              </table>
            </div>

          </div>
        </div>

      </div>
    </section>
  </div>

  <!-- Add/Edit Modal -->
  <div class="modal fade" id="employeeModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <form id="employeeForm">
          <div class="modal-header">
            <h5 class="modal-title" id="employeeModalTitle">Add Employee</h5>
            <button type="button" class="close" data-dismiss="modal">
              <span>&times;</span>
            </button>
          </div>
          <div class="modal-body">

            <input type="hidden" id="empId">

            <div class="form-row">
              <div class="form-group col-md-6">
                <label>Full Name *</label>
                <input type="text" class="form-control" id="empFullName" required>
              </div>
              <div class="form-group col-md-6">
                <label>Email *</label>
                <input type="email" class="form-control" id="empEmail" required>
              </div>
            </div>

            <div class="form-row">
              <div class="form-group col-md-6">
                <label>Mobile *</label>
                <input type="text" class="form-control" id="empMobile" required>
              </div>
              <div class="form-group col-md-6">
                <label>Alt. Mobile</label>
                <input type="text" class="form-control" id="empAltMobile">
              </div>
            </div>

            <div class="form-row">
              <div class="form-group col-md-6">
                <label>Designation</label>
                <input type="text" class="form-control" id="empDesignation">
              </div>
              <div class="form-group col-md-6">
                <label>Department</label>
                <input type="text" class="form-control" id="empDepartment">
              </div>
            </div>

            <div class="form-row">
              <div class="form-group col-md-6">
                <label>Join Date</label>
                <input type="date" class="form-control" id="empJoinDate">
              </div>
              <div class="form-group col-md-6">
                <label>Status</label>
                <select class="form-control" id="empStatus">
                  <option value="active">Active</option>
                  <option value="on_leave">On Leave</option>
                  <option value="inactive">Inactive</option>
                  <option value="left">Left</option>
                </select>
              </div>
            </div>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Create Login Modal -->
  <div class="modal fade" id="createLoginModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <form id="createLoginForm">
          <div class="modal-header">
            <h5 class="modal-title">Create Login</h5>
            <button type="button" class="close" data-dismiss="modal">
              <span>&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <input type="hidden" id="loginEmpId">
            <p class="small text-muted mb-2">
              A user account will be created using the employee email.
            </p>
            <div class="form-group">
              <label>Role</label>
              <select class="form-control" id="loginRole">
                <option value="staff">Staff</option>
                <option value="hr_manager">HR Manager</option>
                <option value="crm_manager">CRM Manager</option>
                <option value="admin">Admin</option>
              </select>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Create</button>
          </div>
        </form>
      </div>
    </div>
  </div>

</div>

<script src="/vendor/jquery/dist/jquery.min.js"></script>
<script src="/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="/vendor/admin-lte/dist/js/adminlte.min.js"></script>
<script src="/javascripts/hr_employees.js"></script>
</body>
</html>
